
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chat</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        
        <div class="col-md-8">
            <div>
                <input type="button" value="Terminar conversacion" class="btn btn-success btn-block" style="max-width:none;width:100%" />
            </div>
            <div style="width:100%; height:400px;border:1px solid #eeeeee; max-height:400px; overflow-y:scroll;">

                <div class="container-fluid">
                    @if (ViewBag.ListaMensajes != null)
                    {
                        foreach (var message in ViewBag.ListaMensajes)
                        {
                            if (ViewBag.userId.ToString() == message.IdUsuario.ToString())
                            {
                                <div class="row" style="border-radius: 15px; border:1px solid blue; width:90%; margin: 5px 0;float: left;">
                                    <div class="col-md-3">
                                        @message.Fecha
                                    </div>
                                    <div class="col-md-9">
                                        @message.Texto
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="row" style="border-radius: 15px; border:1px solid gray;width:90%; margin: 5px 0; float:right">
                                    <div class="col-md-9">
                                        @message.Texto
                                    </div>
                                    <div class="col-md-3">
                                        @message.Fecha
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
            <div class="row">
                <form method="post" action="/Management/Chat" id="form-chat">
                    <div class="col-md-10" style="padding-right:0;">
                        <input class="form-control" type="text" name="mensaje" style="max-width:none;" />
                    </div>
                    <div class="col-md-2" style="padding-left:0;">
                        <input type="submit" value="enviar" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">

            @foreach (var chat in ViewBag.ListaChat)
            {
            <div style="margin-top:0.5rem;">
 
                <form method="post" action="/Management/Chat" id="@chat.ChatId">
                    <input type="text" value=@chat.ChatId name="chatId" hidden/>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">
                        <div class="row">
                            <div class="col-md-10">
                                <p style="margin:0">@chat.UserName</p>
                                <p style="font-size:12px;margin:0">@chat.Asunto</p>
                            </div>
                            <div class="col-md-2"> <span class="badge badge-light">@chat.Mensajes</span></div>
                        </div>
                    </button>
                </form>
            </div>
            }
        </div>
    </div>
</div>

